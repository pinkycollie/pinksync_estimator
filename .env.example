# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file with real credentials

# Database Configuration (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/pinksync_db

# AI Service API Keys (Optional - for AI features)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cloud Storage Integration (Optional - for sync features)
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token_here
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret_here

# DataStax Astra DB (Optional - for vector storage)
ASTRA_DB_TOKEN=your_astra_db_token_here
ASTRA_DB_ENDPOINT=your_astra_db_endpoint_here

# Development Platform Configuration
# Replit - Development Environment
REPLIT_DB_URL=your_replit_db_url_here
REPLIT_DOMAINS=your_replit_domain_here

# Vercel - Frontend Deployment
# (Vercel configuration is managed through vercel.json and Vercel dashboard)

# External Module Connectors
# PinkFlow TestContainer - Test validation and approval workflows
PINKFLOW_API_URL=https://pinkflow.pinkycollie.dev
PINKFLOW_API_KEY=your_pinkflow_api_key_here

# PinkSync - DeafAuth and synchronization services
PINKSYNC_API_URL=https://pinksync.pinkycollie.dev
PINKSYNC_API_KEY=your_pinksync_api_key_here

# FibonRose - Fibonacci-based estimation engine
FIBONROSE_API_URL=https://fibonrose.pinkycollie.dev
FIBONROSE_API_KEY=your_fibonrose_api_key_here

# NegraRosa - Additional module (if applicable)
NEGRAROSA_API_URL=https://negrarosa.pinkycollie.dev
NEGRAROSA_API_KEY=your_negrarosa_api_key_here

# Deaf Community Accessibility Features
ENABLE_DEAF_AUTH=true
ENABLE_SIGN_LANGUAGE_SUPPORT=true
ENABLE_VISUAL_CUES=true

# Server Configuration
PORT=5000
NODE_ENV=development

# Ngrok Configuration (Optional - for external access during development)
NGROK_AUTHTOKEN=your_ngrok_authtoken_here
