# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file with real credentials

# Database Configuration (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/pinksync_db

# AI Service API Keys (Optional - for AI features)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cloud Storage Integration (Optional - for sync features)
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token_here
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret_here

# DataStax Astra DB (Optional - for vector storage)
ASTRA_DB_TOKEN=your_astra_db_token_here
ASTRA_DB_ENDPOINT=your_astra_db_endpoint_here

# Replit-specific (Only needed when running on Replit)
REPLIT_DB_URL=your_replit_db_url_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Ngrok Configuration (Optional - for external access during development)
NGROK_AUTHTOKEN=your_ngrok_authtoken_here
